{
	"name": "@d1vij/shit-i-always-use",
	"version": "0.1.1",
	"description": "Hooks, Functions and Types that I always use",
	"homepage": "https://github.com/d1vij/shit-i-always-use#readme",
	"publishConfig": {
		"access": "public"
	},
	"bugs": {
		"url": "https://github.com/d1vij/shit-i-always-use/issues"
	},
	"sideEffects": false,
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/d1vij/shit-i-always-use.git"
	},
	"workspaces": [
		"test/**"
	],
	"files": [
		"dist"
	],
	"type": "module",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			}
		},
		"./package.json": "./package.json"
	},
	"scripts": {
		"build": "bunup",
		"dev": "bun run --cwd test/ui dev",
		"format": "biome format --write",
		"lint": "biome check --fix",
		"prepare": "bun simple-git-hooks",
		"release": "bumpp --commit --push --tag",
		"test": "bun test",
		"test:coverage": "bun test --coverage",
		"test:watch": "bun test --watch",
		"type-check": "tsc --noEmit"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.4.2",
		"@types/bun": "^1.3.9",
		"@types/react": "^19.2.14",
		"bumpp": "^10.4.1",
		"bunup": "^0.16.28",
		"react": "^19.2.4",
		"react-dom": "^19.2.4",
		"simple-git-hooks": "^2.13.1",
		"typescript": "^5.9.3"
	},
	"peerDependencies": {
		"react": "^18.0.0 || ^19.0.0",
		"react-dom": "^18.0.0 || ^19.0.0",
		"typescript": ">=4.5.0"
	},
	"peerDependenciesMeta": {
		"typescript": {
			"optional": true
		}
	},
	"simple-git-hooks": {
		"pre-commit": "bun run lint && bun run type-check"
	},
	"dependencies": {
		"clsx": "^2.1.1",
		"nanoid": "^5.1.6",
		"tailwind-merge": "^3.5.0"
	}
}
